{
    "name": "damasco/tz-leads",
    "type": "project",
    "authors": [
        {
            "name": "Bulat Damdinov",
            "email": "dbulats88@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.0.0",
        "yiisoft/yii": "~1.1.19",
        "swiftmailer/swiftmailer": "^6.0",
        "ramsey/uuid": "^3.7",
        "bower-asset/bootstrap": "^3.3.7"
    },
    "require-dev": {
        "zhuravljov/yii2-debug": "^1.5",
        "squizlabs/php_codesniffer": "3.*",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "phpcs": "./vendor/bin/phpcs -s --colors --extensions=php --standard=PSR2 ./app",
        "phpcs-fixer": "./vendor/bin/php-cs-fixer fix --config .php_cs"
    }
}
